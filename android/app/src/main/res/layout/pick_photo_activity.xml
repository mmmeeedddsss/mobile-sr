<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/prev_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.25"
            android:text="Previous"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:typeface="sans"
            app:backgroundTint="@color/colorButtonBackground" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/next_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Next"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:typeface="sans"
            app:backgroundTint="@color/colorButtonBackground" />

    </LinearLayout>

    <com.senior_project.group_1.mobilesr.views.ZoomableImageView
        android:id="@+id/pick_photo_image_view"
        android:layout_width="fill_parent"
        android:layout_height="406dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/toggle_sr_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.10"
            android:text="Toggle"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:typeface="sans"
            app:backgroundTint="@color/colorButtonBackground" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/rotate_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.10"
            android:text="Rotate"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:typeface="sans"
            app:backgroundTint="@color/colorButtonBackground" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/share_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.10"
            android:text="Share"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:typeface="sans"
            app:backgroundTint="@color/colorButtonBackground" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/save_image_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.10"
            android:text="Save"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:typeface="sans"
            app:backgroundTint="@color/colorButtonBackground" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/process_image_button"
            android:layout_width="79dp"
            android:layout_height="match_parent"
            android:layout_weight="0.10"
            android:text="Process"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:typeface="sans"
            app:backgroundTint="@color/colorButtonBackground" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/process_all_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Process All"
            android:textColor="@color/colorButtonText"
            android:textStyle="bold"
            android:typeface="sans"
            app:backgroundTint="@color/colorButtonBackground" />

    </LinearLayout>


</LinearLayout>
