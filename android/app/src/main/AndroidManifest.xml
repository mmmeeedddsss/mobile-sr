<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.senior_project.group_1.mobilesr">

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.senior_project.group_1.mobilesr.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.senior_project.group_1.mobilesr.activities.PreprocessAndEnhanceActivity"></activity>
        <activity android:name="com.senior_project.group_1.mobilesr.activities.TutorialActivity"></activity>
        <activity android:name="com.senior_project.group_1.mobilesr.activities.DivideImageActivity"></activity>
        <activity android:name="com.senior_project.group_1.mobilesr.activities.MergeImageActivity"></activity>
        <activity android:name="com.senior_project.group_1.mobilesr.activities.SettingsActivity"></activity>
        <provider
            android:name=".views.GenericFileProvider"
            android:authorities="com.senior_project.group_1.mobilesr"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>


    </application>

</manifest>
